@model List<IdentityChatEmail.Entities.Message>

@{
    Layout = null;
    int count = 1;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Gönderilen Mesajlar</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body class="bg-light">

    <div class="container mt-5">
        <div class="card shadow-sm">
            <div class="card-header bg-primary text-white">
                <h3 class="mb-0">📤 Gönderilen Mesajlar</h3>
            </div>
            <div class="card-body p-4">
                <table class="table table-hover table-bordered text-center align-middle">
                    <thead class="table-light">
                        <tr>
                            <th>#</th>
                            <th>Alıcı</th>
                            <th>Konu</th>
                            <th>Mesajı Aç</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@count</td>
                                <td>@item.ReceiverEmail</td>
                                <td>@item.Subject</td>
                                <td>
                                    <a href="/Message/MessageDetail/@item.MessageId" class="btn btn-sm btn-outline-warning">
                                        📩 Aç
                                    </a>
                                </td>
                            </tr>
                            count++;
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</body>
</html>
